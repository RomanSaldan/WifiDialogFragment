<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/home_view">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Wifi"
        android:id="@+id/btnSystemWifi_AM"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide NavBar"
        android:id="@+id/btnHideNavBar_AM"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show NavBar"
        android:id="@+id/btnShowNavBar_AM"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnHideNavBar_AM"
        android:layout_toEndOf="@+id/btnHideNavBar_AM"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment Wifi"
        android:id="@+id/btnFragmentWifi_AM"
        android:layout_alignTop="@+id/btnSystemWifi_AM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment BT"
        android:id="@+id/btnFragmentBT_AM"
        android:layout_above="@+id/btnFragmentWifi_AM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
